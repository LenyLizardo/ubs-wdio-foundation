{
    "compilerOptions": {
        "outDir": "./.tsbuild/",
        "sourceMap": true,
        "target": "es2019",
        "module": "commonjs",
        "removeComments": true,
        "noImplicitAny": true,
        "strictPropertyInitialization": true,
        "strictNullChecks": true,
        "types": [
            "node",
            "webdriverio/async",
            "webdriverio/sync",
            "@wdio/mocha-framework",
            "expect-webdriverio",
        ]
    },
    "include": [
        "resources/conf/*.ts",
        "config/**/*.ts",
        "./tests/**/*.ts"
    ]
}
